<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.dgit.RentCar_Project.dao.FuelDao">
	
	<resultMap type="Fuel" id="FuelResult">
		<id property="fuelCode" column="fuel_code"/>
		<result property = "fuelName" column="fuel_type"/>
	</resultMap>
	
	<sql id="selectSql">
		select fuel_code, fuel_type as fuelName from fuel
	</sql>
	
	<sql id="whereAllSql">
		<where>
			<if test="fuelCode != null">
				fuel_code = #{fuelCode}
			</if>
			<if test="fuelName != null">
				and fuel_type = #{fuelName}
			</if>
		</where>
	</sql>
	
	
	<sql id="wherePrimarySql">
		<where>
			<if test ="fuelCode != null">
				fuel_code = #{fuelCode}
			</if>
		</where>
	</sql>
	
	<sql id="insertSql">
		insert into fuel(fuel_code, fuel_type) values(#{fuelCode}, #{fuelName})
	</sql>
	
	<sql id="updateSql">
		update fuel
	</sql>
	
	<sql id="deleteSql">
		delete from fuel
	</sql>
	
	<select id="selectFuelByFuelCode" resultMap="FuelResult">
		<include refid="selectSql"/>
		<include refid="wherePrimarySql"/>
	</select>
	
	
	<select id="selectFuelByAll" resultMap="FuelResult">
		<include refid="selectSql"/>
	</select>
	
	<insert id="insertFuel" parameterType="Fuel">
		<include refid="insertSql"/>
	</insert>
	
	<update id="updateFuel" parameterType="Fuel">
		<include refid="updateSql"/>
			<set>
				<if test="fuelCode != null">
					fuel_code = #{fuelCode},
				</if>
				<if test="fuelName != null">
					fuel_type = #{fuelName},
				</if>
			</set>
		<include refid="wherePrimarySql"/>
	</update>
	
	<delete id="deleteFule" parameterType="Fuel">
		<include refid="deleteSql"/>
		<include refid="wherePrimarySql"/>
	</delete>
	
</mapper>